<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <org.opencv.android.JavaCameraView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:visibility="visible"
        android:id="@+id/java_surface_view"
        tools:ignore="MissingConstraints" />


    <HorizontalScrollView
        android:layout_width="80dp"
        android:layout_height="86dp"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_canny"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_marginRight="10dp"
                android:text="Canny"
                android:textColor="@android:color/black"
                android:textSize="12dp"
                android:textStyle="bold"
                android:background="@drawable/circle_button"/>

            <Button
                android:id="@+id/btn_blur"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/circle_button"
                android:text="Blur"
                android:textColor="@android:color/black"
                android:textSize="12dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_grey"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/circle_button"
                android:text="Grey"
                android:textColor="@android:color/black"
                android:textSize="12dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_ColorBlob"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/circle_button"
                android:text="ColorBlob"
                android:textColor="@android:color/black"
                android:textSize="11dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_Transform"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/circle_button"
                android:text="Transform"
                android:textColor="@android:color/black"
                android:textSize="11dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_edge"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/circle_button"
                android:text="Edge"
                android:textColor="@android:color/black"
                android:textSize="11dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/face_detection"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/circle_button"
                android:text="FaceDetection"
                android:textColor="@android:color/black"
                android:textSize="8dp"
                android:textStyle="bold" />


        </LinearLayout>

    </HorizontalScrollView>

</RelativeLayout>